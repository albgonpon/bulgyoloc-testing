{
  "compilerOptions": {
    "module": "amd",
    "noImplicitAny": false,
    "sourceMap": false,
    "jsx": "react",
    "jsxFactory": "tsx",
    "target": "es5",
    "lib": ["es5", "es6", "dom", "scripthost"],
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "preserveConstEnums": true,
    "declaration": false,
    "suppressImplicitAnyIndexErrors": true,
    "outDir": "./dist",
    "types": ["arcgis-js-api"],
    "importHelpers": true,
    "esModuleInterop": true,
    "allowJs": true
  },
  "include": [
    "./**/*",
    "app/Components/InteractiveLegend",
    "app/Components/Screenshot",
    "app/interfaces"
  ],
  "exclude": ["./node_modules", "./tsrules"],
  "files": [
    "./node_modules/@esri/application-base-js/index.d.ts",
    "./node_modules/templates-common-library/dist/index.d.ts",
    "./node_modules/@types/arcgis-js-api/index.d.ts",
    "app/Components/Screenshot/Screenshot/interfaces/interfaces.d.ts",
    "app/telemetry/index.d.ts",
    "app/interfaces/interfaces.d.ts",
    "./node_modules/dojo-typings/dojo/1.11/loader.d.ts",
    "./node_modules/dojo-typings/dojo/1.11/index.d.ts",
    "./node_modules/dojo-typings/dojo/1.11/modules.d.ts",
    "./node_modules/dojo-typings/dijit/1.11/index.d.ts",
    "./node_modules/dojo-typings/dijit/1.11/modules.d.ts",
    "./node_modules/dojo-typings/dojox/1.11/index.d.ts",
    "./node_modules/dojo-typings/dojox/1.11/modules.d.ts"
  ]
}
